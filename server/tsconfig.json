{
    "compilerOptions": {
        "target": "esnext",
        "strict": true,
        "noImplicitAny": false,      
        "strictNullChecks": true,  
        "module": "none",
        "skipLibCheck": true,
        "outDir": "dist",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "typeRoots": [
            "../types",
            "./node_modules/@types"
        ]
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]    
}